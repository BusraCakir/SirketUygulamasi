@{
    ViewBag.Title = "Çalışan Listesi";
}
<h2>@ViewBag.Title</h2>

@model List<SirketUygulamasi.Models.DTO_CALISAN>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Adı Soyadı</th>
            <th>T.C. No</th>
            <th>Şirket Adı</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ADI_SOYADI</td>
                <td>@item.TC_NO</td>
                <td>@item.SIRKET_ADI</td>

                <td><input class="btn btn-success" type="submit" value="Güncelle" onclick="location.href='@Url.Action("CalisanDuzenle", "Home" , new { id = @item.CALISAN_ID })'" /> </td>
                <td><input class="btn btn-danger" type="submit" value="Sil" onclick="location.href='@Url.Action("CalisanSil", "Home" , new { id = @item.CALISAN_ID })'" /> </td>
               
            </tr>
        }
    </tbody>
</table>
