@{
    ViewBag.Title = "Çalışan Ekle";
}
@using SirketUygulamasi.Models
@model Calisan

<h2>@ViewBag.Title</h2>
<div style="margin-top:30px">
    <form action="CalisanEkle" method="post">

        @Html.HiddenFor(model => model.CALISAN_ID, new { @class = "form-control", @tabindex = "1", @maxlength = "50" })
        <div class="row">
            <div class="col-md-4">
                <label>Adı Soyadı: </label>
                @Html.TextBoxFor(model => model.ADI_SOYADI, new { @class = "form-control", @tabindex = "1", @maxlength = "50" })
            </div>
            <div class="col-md-4">
                <label> T.C. No: </label>
                @Html.TextBoxFor(model => model.TC_NO, new { @class = "form-control", @tabindex = "1", @maxlength = "11" })
            </div>
            <div class="col-md-4">
                <label> Şirket Listesi: </label>
                @Html.DropDownListFor(model => model.CALISAN_SIRKET_ID, (SelectList)ViewBag.vb_SIRKETLER, "", new { @class = "form-select form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12" style="text-align:left">
                <input class="btn btn-success" type="submit" value="Kaydet" />
            </div>
        </div>
       
    </form>
</div>